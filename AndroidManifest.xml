            </intent-filter>
        </activity>
        <activity android:name=".ItemEdit" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name=".ShoppingListActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
    </application>

</manifest>